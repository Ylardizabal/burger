<h1>Eat a Burger!</h1>


<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  
  <button type="submit">Add a Burger</button>
</form>